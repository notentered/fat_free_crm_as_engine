
= hook(:lead_top_section, self, :f => f) do
  .section
    %table
      %tr
        %td
          .label.top{ :class => "#{FatFreeCrm::Setting.require_first_names ? 'req' : nil}" } #{t :first_name}:
          = f.text_field :first_name
        %td= spacer
        %td
          .label.top{ :class => "#{FatFreeCrm::Setting.require_last_names ? 'req' : nil}" } #{t :last_name}:
          = f.text_field :last_name
      %tr
        %td
          .label #{t :email}:
          = f.text_field :email
        %td= spacer
        %td
          .label #{t :phone}:
          = f.text_field :phone

      - if FatFreeCrm::Setting.background_info && FatFreeCrm::Setting.background_info.include?(:lead)
        %tr
          %td(colspan="3")
            .label= t(:background_info) << ':'
            = f.text_area :background_info, :style =>"width:500px", :rows => 3

      = render :partial => "fat_free_crm//shared/tags", :locals => {:f => f, :span => 3}

      = hook(:lead_top_section_bottom, self, :f => f)
